{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-debugger": "warn"
  },
  "overrides": [
    {
      "files": ["cli/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      }
    },
    {
      "files": ["overlay/**/*.js", "demo/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    }
  ]
}

